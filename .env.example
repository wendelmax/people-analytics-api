# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/people_analytics?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=1d

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Rate Limiting
RATE_LIMIT_POINTS=10
RATE_LIMIT_DURATION=1

# Server
PORT=3000
NODE_ENV=development

# CORS: origens permitidas (frontend em outro servidor). Múltiplas separadas por vírgula.
# Dev: http://localhost:5173
# Vercel: URL do projeto frontend na Vercel (ex: https://people-analytics-web.vercel.app)
CORS_ORIGINS=http://localhost:5173
